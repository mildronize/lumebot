{
	"name": "lumebot",
	"version": "2.0.0-1",
	"main": "dist/src/functions/*.js",
	"private": true,
	"scripts": {
		"deploy:pre": "bun run scripts/pre-deploy.ts",
		"tunnel": "bun run scripts/tunnel.ts",
		"build": "tsc",
		"watch": "tsc -w",
		"clean": "rimraf dist",
		"format": "prettier --write .",
		"dev": "run-p watch start",
		"prestart": "npm run clean && npm run build",
		"start": "func start",
		"azurite": "azurite --silent --location ./.azurite --debug ./.azurite/debug.log",
		"release": "release-it"
	},
	"devDependencies": {
		"@types/bun": "^1.1.16",
		"@types/lodash.chunk": "^4.2.9",
		"@types/node": "^22.10.5",
		"azurite": "^3.33.0",
		"bun": "^1.1.43",
		"pino": "^9.6.0",
		"pino-pretty": "^13.0.0",
		"prettier": "^3.4.2",
		"release-it": "^18.1.1",
		"rimraf": "^6.0.1",
		"type-fest": "^4.32.0",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"@azure/data-tables": "^13.3.0",
		"@azure/functions": "^4.6.0",
		"dayjs": "^1.11.13",
		"dotenv": "^16.4.7",
		"grammy": "github:grammyjs/grammY#support-azure-v4",
		"hash-wasm": "^4.12.0",
		"lodash.chunk": "^4.2.0",
		"npm-run-all": "^4.1.5",
		"openai": "^4.78.1",
		"telegraf-middleware-console-time": "^2.1.0",
		"telegramify-markdown": "^1.2.2",
		"ts-odata-client": "^2.0.2",
		"zod": "^3.24.1",
		"zod-validation-error": "^3.4.0"
	}
}
